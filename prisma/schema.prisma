generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Deposit {
  id                String   @id @default(uuid())
  firstName         String
  lastName          String?
  userId            String
  amount            String
  bitcoinEquivalent String
  currency          String
  paymentMethod     String
  status            String
  wallet            String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Withdrawal {
  id            String   @id @default(uuid())
  firstName     String
  lastName      String?
  userId        String
  wallet        String
  amount        String
  currency      String
  paymentMethod String
  walletAddress String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

